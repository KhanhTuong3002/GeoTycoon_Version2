@page
@model GeoClinet.Pages.Profile123.IndexModel

@{
    ViewData["Title"] = "User Management";
}

<h1>User Management</h1>

<!-- Search Form -->
<form method="get" class="mb-4">
    <div class="flex items-center">
        <input type="text" name="searchTerm" value="@Model.SearchTerm" placeholder="Search Profile" class="input input-bordered w-64 mr-4" />
        <div>
            <input type="checkbox" name="SearchByEmail" value="true" @(Model.SearchByEmail ? "checked" : "") /> Search by Email
            <input type="checkbox" name="SearchByFirstName" value="true" @(Model.SearchByFirstName ? "checked" : "") /> Search by First Name
            <input type="checkbox" name="SearchByLastName" value="true" @(Model.SearchByLastName ? "checked" : "") /> Search by Last Name
        </div>
        <button type="submit" class="btn btn-primary ml-4">Search</button>
    </div>
</form>

<div class="w-full mt-8">
    <table class="table w-full rounded-box table-auto overflow-auto">
        <thead>
            <tr>
                <th class="font-semibold p-4 relative pr-6 text-left">@Html.DisplayNameFor(model => model.Profile[0].User)</th>
                <th class="font-semibold p-4 relative pr-6 text-left">@Html.DisplayNameFor(model => model.Profile[0].FirstName)</th>
                <th class="font-semibold p-4 relative pr-6 text-left">@Html.DisplayNameFor(model => model.Profile[0].LastName)</th>
                <th class="font-semibold p-4 relative pr-6 text-left">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Profile)
            {
                <tr class="bg-base-100 hover">
                    <td class="font-semibold p-4 relative pr-6 break-words">@Html.DisplayFor(modelItem => item.User.Email)</td>
                    <td class="font-semibold p-4 relative pr-6 break-words">@Html.DisplayFor(modelItem => item.FirstName)</td>
                    <td class="font-semibold p-4 relative pr-6 break-words">@Html.DisplayFor(modelItem => item.LastName)</td>
                    <td class="font-semibold p-4 relative pr-6 break-words">
                        @if (item.Isbanned)
                        {
                            <form method="post" asp-page-handler="Unban" asp-route-id="@item.Id">
                                <button type="submit" class="btn btn-success">Unban</button>
                            </form>
                        }
                        else
                        {
                            <form method="post" asp-page-handler="Ban" asp-route-id="@item.Id">
                                <button type="submit" class="btn btn-error">Ban</button>
                            </form>
                        }
                    </td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="mr-2">
                            <img src="css/info.svg" />
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
