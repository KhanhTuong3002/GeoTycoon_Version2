@page
@model GeoClinet.Pages.HowToPlayModel
@{
}
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const steps = document.querySelectorAll('.step');
        steps.forEach((step, index) => {
            step.addEventListener('click', () => {
                steps.forEach((s, i) => {
                    if (i <= index) {
                        s.classList.add('step-primary');
                    } else {
                        s.classList.remove('step-primary');
                    }
                });
                document.querySelectorAll('.text-content > div').forEach((content, contentIndex) => {
                    content.classList.add('hidden');
                    if (index === contentIndex) {
                        content.classList.remove('hidden');
                    }
                });
            });
        });
    });
</script>
<body class="bg-gray-100 p-6 text-base-content">

    <div class="container mx-auto">
        <h1 class="text-3xl font-bold mb-4">How to Play GeoTycoon: Experience Wealth and Geography</h1>

        <div class="steps steps-vertical lg:steps-horizontal w-full">
