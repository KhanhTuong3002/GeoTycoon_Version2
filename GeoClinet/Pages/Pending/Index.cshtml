@page
@model GeoClinet.Pages.Pending.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Pending to appoval Teacher</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Profile[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profile[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profile[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profile[0].PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Profile) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <form method="post">
                        @* <a asp-page="./Delete" asp-route-id="@item.Id">Approve</a> *@
                        <input type="hidden" asp-for="@item.Id" value ="@item.Id" name="Id" />
                        <input type="submit" value="Approve" class="btn btn-success" />
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
