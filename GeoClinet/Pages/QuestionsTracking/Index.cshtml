@page
@model GeoClinet.Pages.QuestionsTracking.IndexModel

@{
    ViewData["Title"] = "Tracking Question";
}

<h1>Tracking Question</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tracking[0].Question)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tracking[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tracking[0].Action)
            </th>  
            <th>
                @Html.DisplayNameFor(model => model.Tracking[0].CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Tracking) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Question.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Action)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
