                    <div class="flex justify-between">
                        <div class="mb-1 mb-md-0">
                            <p class="mb-0 text-base-content">&copy; 2024 Your Company Inc </p>
                        </div>
                        <div class="mb-1 mb-md-0">
                            <p class="mb-0 text-base-content">
                                Made with <span class="fas fa-heart mx-1 text-danger text-base-content"> </span> by <span class="text-decoration-none ms-1 text-base-content">GeoTycoon</span>
                            </p>
                        </div>
                    </div>
                </div>
            </div><!-- end of .container-->

        </section>
    </footer>
    

    

    @await RenderSectionAsync("Scripts", false)
    <script src="~/js/all.min.js"></script>
    <script src="~/js/site.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&amp;family=Volkhov:wght@700&amp;display=swap" rel="stylesheet">
</body>

</html>