                        <button class="btn btn-warning fw-medium py-1">Sign up Now</button>
                    </div>
                </div>
            </div><!-- end of .container-->

        </section>
        <section class=" bg-base-100 text-center py-0 w-3/4 mx-auto">

            <div class="container mx-auto">
