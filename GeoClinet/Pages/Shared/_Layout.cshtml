<!DOCTYPE html >
<html lang="en" data-theme="ayu-light">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GeoTycoon</title>
    <link rel="icon" type="image/svg+xml" href="~/css/GeoTycoonLogo_Trans.png">
    <link rel="stylesheet" href="~/css/site.css" />
    <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            const savedTheme = localStorage.getItem('theme') || 'ayu-light'; // Default theme
            document.documentElement.setAttribute('data-theme', savedTheme);
        });

        function setTheme(theme) {
            document.documentElement.setAttribute('data-theme', theme);
            localStorage.setItem('theme', theme);
        }
    </script>
</head>
<style>
    .text-geo-tycoon {
        background: linear-gradient(45deg, #FFD700, #FF6347); /* Điều chỉnh mã màu gradient tùy ý */
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
</style>
<body >
    <nav class="navbar bg-base-100 top-0 flex flex-wrap pl-0 mb-0 list-none z-50">
      <div class="w-3/4 container mx-auto flex justify-between items-center">
        <a class="navbar-brand flex items-center justify-between gap-2" asp-page="/Index">
          <img src="~/css/GeoTycoonLogo_Trans.png" alt="logo" class="w-14 h-14">
          <span class="text-geo-tycoon font-bold text-2xl">
              GeoTycoon
          </span>
        </a>
            
        <div class="flex space-x-4">
                <a class="block py-2 px-4 hover:text-orange-500 text-base-content" href="#feature">How To Play</a>
                <a class="block py-2 px-4 hover:text-orange-500 text-base-content" asp-page="/AboutUs">About Us</a>
                <a class="block py-2 px-4 hover:text-orange-500 text-base-content" href="#superhero">Download</a>
        </div>
        <div class="flex space-x-4">
          <partial name="_LoginPartial" />
        </div>
      </div>
    </nav>

    @*         <nav class="navbar sticky top-0">
            <div class="navbar-start gap-2 z-10">
                <a class="btn btn-ghost gap-2 text-xl text-white hover:bg-transparent" asp-page="/Index">
                    <img alt="logo" class="w-12 h-12" src="~/css/oc_preview_rev_2.png">
                </a>

            </div>

            <div class="navbar-end gap-2 z-9">
                <partial name="_LoginPartial" />
            </div>
