@page
@model GeoClinet.Pages.Questionsss.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Question.Id" />
            <div class="form-group">
                <label asp-for="Question.Title" class="control-label"></label>
                <input asp-for="Question.Title" class="form-control" />
                <span asp-validation-for="Question.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.ProvinceId" class="control-label"></label>
                <select asp-for="Question.ProvinceId" class="form-control" asp-items="ViewBag.ProvinceId"></select>
                <span asp-validation-for="Question.ProvinceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.UserId" class="control-label"></label>
                <input asp-for="Question.UserId" class="form-control" asp-items="ViewBag.FirstName" readonly></input>
            </div>
            <div class="form-group">
                <label asp-for="Question.Images" class="control-label"></label>
                <input asp-for="Question.Images" class="form-control" />
                <span asp-validation-for="Question.Images" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.Content" class="control-label"></label>
                <input asp-for="Question.Content" class="form-control" />
                <span asp-validation-for="Question.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.Option1" class="control-label"></label>
                <input id="option1Input" asp-for="Question.Option1" class="form-control" oninput="updateAnswerDropdown()" />
                <span asp-validation-for="Question.Option1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.Option2" class="control-label"></label>
                <input id="option2Input" asp-for="Question.Option2" class="form-control" oninput="updateAnswerDropdown()" />
                <span asp-validation-for="Question.Option2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.Option3" class="control-label"></label>
                <input id="option3Input" asp-for="Question.Option3" class="form-control" oninput="updateAnswerDropdown()" />
                <span asp-validation-for="Question.Option3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.Option4" class="control-label"></label>
                <input id="option4Input" asp-for="Question.Option4" class="form-control" oninput="updateAnswerDropdown()" />
                <span asp-validation-for="Question.Option4" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.Answer" class="control-label"></label>
                <select id="answerDropdown" asp-for="Question.Answer" class="form-control">
                    <option value="">Select option</option>
                </select>
                <span asp-validation-for="Question.Answer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.Description" class="control-label"></label>
                <input asp-for="Question.Description" class="form-control" />
                <span asp-validation-for="Question.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.Published" class="control-label"></label>
                <input asp-for="Question.Published" class="form-control" />
                <span asp-validation-for="Question.Published" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.CreatedAt" class="control-label"></label>
                <input asp-for="Question.CreatedAt" class="form-control" />
                <span asp-validation-for="Question.CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    <script>
        function updateAnswerDropdown() {
            var option1 = document.getElementById('option1Input').value;
            var option2 = document.getElementById('option2Input').value;
            var option3 = document.getElementById('option3Input').value;
            var option4 = document.getElementById('option4Input').value;

            var answerDropdown = document.getElementById('answerDropdown');
            answerDropdown.innerHTML = '';

            if (!option1 && !option2 && !option3 && !option4) {
                var defaultOption = document.createElement('option');
                defaultOption.value = '';
                defaultOption.textContent = 'Select option';
                answerDropdown.appendChild(defaultOption);
            }

            if (option1.trim() !== '') {
                var option1Element = document.createElement('option');
                option1Element.value = option1;
                option1Element.textContent = option1;
                answerDropdown.appendChild(option1Element);
            }

            if (option2.trim() !== '') {
                var option2Element = document.createElement('option');
                option2Element.value = option2;
                option2Element.textContent = option2;
                answerDropdown.appendChild(option2Element);
            }

            if (option3.trim() !== '') {
                var option3Element = document.createElement('option');
                option3Element.value = option3;
                option3Element.textContent = option3;
                answerDropdown.appendChild(option3Element);
            }

            if (option4.trim() !== '') {
                var option4Element = document.createElement('option');
                option4Element.value = option4;
                option4Element.textContent = option4;
                answerDropdown.appendChild(option4Element);
            }
        }
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
