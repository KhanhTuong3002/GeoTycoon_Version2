@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<div class="flex items-center justify-center min-h-screen text-base-content">
    <form method="post" class="p-8 shadow-lg rounded-lg space-y-4 relative border border-base-300" style="width:40%;">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="text-center">
            <h3><i class="fa fa-lock fa-4x mb-5"></i></h3>
            <h2 class="text-2xl font-bold mb-2">Forgot Password</h2>
            <p>You can reset your password here.</p>
        </div>

        <div class="relative mb-6">
            
            <label asp-for="Input.Email" class="block text-sm font-bold mb-2"><i class="mr-2" data-feather="mail" aria-hidden="true"></i>Email</label>
            <input asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="Enter your email"
                   class="input input-bordered w-full" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="mb-6 relative">
            <button type="submit" class="btn btn-warning w-full">Reset Password</button>
        </div>
    </form>


</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
